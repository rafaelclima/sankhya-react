{
	"compilerOptions": {
		"target": "ES2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@routes/*": ["routes/*"],
			"@contexts/*": ["contexts/*"],
			"@services/*": ["services/*"],
			"@controllers/*": ["controllers/*"],
			"@hooks/*": ["hooks/*"],
			"@utils/*": ["utils/*"],
			"@styles/*": ["styles/*"],
			"@assets/*": ["assets/*"],
			"@config/*": ["config/*"],
			"@layout/*": ["layout/*"]
		},
		"incremental": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build", "dist"]
}
